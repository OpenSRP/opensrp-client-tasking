<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilterTaskStyle" parent="AppTheme">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilterTaskStyle.Label">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TaskFilterToggle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/toggle_color</item>
        <item name="android:layout_marginBottom">@dimen/filter_toggle_bottom_margin</item>
        <item name="android:layout_marginEnd">@dimen/filter_toggle_end_margin</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>